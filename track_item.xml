<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cargo_pic"
                android:layout_width="wrap_content"
                android:layout_height="86dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/icons8_empty_box_64" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cargoMemo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Kargo Notu"
                    android:layout_marginLeft="20dp"
                    android:textSize="14sp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/cargo_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="2dp"
                    android:ems="10"
                    android:fontFamily="bold"
                    android:text="Cargo Number"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/cargo_company"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:text="Kargo Åžirketi" />

                <TextView
                    android:id="@+id/durum_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:text="Durum Raporu"
                    android:textColor="#000000"/>


            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/trackOption"
            android:layout_width="21dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="&#8942;"
            android:textAppearance="?android:textAppearanceLarge" />


    </androidx.cardview.widget.CardView>



</LinearLayout>