<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewPasswordActivity"
    android:weightSum="13"
    android:gravity="center|top">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar_newPassword"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#6666ff"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="176dp"
            android:layout_height="43dp"
            android:layout_gravity="left"
            android:src="@drawable/kargomkolay_logo" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Şifre yenileme linki e-posta adresinize gönderlicektir."
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/getNewPassword"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:hint="E-posta Adresiniz"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/newPassword_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yenile"
        android:layout_marginBottom="16dp"/>

    <ProgressBar
        android:id="@+id/newPasswordProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>



</LinearLayout>