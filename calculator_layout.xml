<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculatorActivity"
    android:weightSum="13"
    android:layout_gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="35dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/kargomkolay_logo"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_gravity="left">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="10dp">

            <RadioButton
                android:id="@+id/send_button"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:text="Gönder" />

            <RadioButton
                android:id="@+id/get_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Getirt" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="10dp">

            <RadioButton
                android:id="@+id/evrak_button"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:text="Evrak" />

            <RadioButton
                android:id="@+id/koli_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Koli" />
        </RadioGroup>

        </LinearLayout>


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:gravity="top|center">

        <TextView
            android:id="@+id/choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nereye:" />


        <Spinner
            android:id="@+id/countrySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_spinner"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="8dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ağırlık giriniz:" />

        <Spinner
            android:id="@+id/WeightSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_spinner"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="50dp" />


        <LinearLayout
            android:id="@+id/infos"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/rounded_border_orange"
            android:orientation="horizontal"
            android:weightSum="7">

            <EditText
                android:id="@+id/en_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:inputType="number"
                android:hint="En.."
                android:paddingLeft="2dp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#FFA500" />

            <EditText
                android:id="@+id/boy_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:inputType="number"
                android:hint="Boy.."
                android:paddingLeft="2dp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#FFA500" />

            <EditText
                android:id="@+id/yukseklik_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:inputType="number"
                android:hint="Yükseklik.."
                android:paddingLeft="2dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#FFA500" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="CM"
                android:textColor="#FFA500"
                android:gravity="center"/>

        </LinearLayout>

            <Button
                android:id="@+id/price_button"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:background="#FFA500"
                android:text="Fiyat Al" />



    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/calculatorBottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        app:menu="@menu/navigation_menu">



    </com.google.android.material.bottomnavigation.BottomNavigationView>

</LinearLayout>