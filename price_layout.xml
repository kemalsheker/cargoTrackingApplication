<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PriceActivity"
    android:weightSum="7">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/kargomkolay_logo" />


    <TextView
        android:id="@+id/price_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/make_call"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:src="@drawable/ic_call_black_24dp" />

            <TextView
                android:layout_width="242dp"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="Müşteri Hizmetleri"
                android:textSize="17sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageButton
                android:id="@+id/send_email"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:src="@drawable/ic_email_black_24dp" />

            <TextView
                android:layout_width="242dp"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="E-Mail Gönder"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageButton
                android:id="@+id/send_whatsapp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:src="@drawable/icons8_whatsapp_24" />

            <TextView
                android:layout_width="242dp"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="WhatsApp Hattı"
                android:textSize="17sp" />

        </LinearLayout>




    </LinearLayout>



</LinearLayout>